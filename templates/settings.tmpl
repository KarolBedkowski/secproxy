{{ define "header" }}
{{ end }}

{{ define "body" }}
<h2>Settings</h2>

<div class="uk-panel uk-panel-box uk-margin-bottom">
	<h3 class="uk-panel-title">Debug level</h3>
	<div class="uk-button-group">
		<a class="uk-button {{ if eq .LogLevel "warning" }}uk-active{{ end }}" href="/settings/setdebug?l=warning">Warning</a>
		<a class="uk-button {{ if eq .LogLevel "info" }}uk-active{{ end }}" href="/settings/setdebug?l=info">Info</a>
		<a class="uk-button {{ if eq .LogLevel "debug" }}uk-active{{ end }}" href="/settings/setdebug?l=debug">Debug</a>
	</div>
</div>

<div class="uk-panel uk-panel-box uk-margin-bottom">
	<h3 class="uk-panel-title">Configuration</h3>
	<pre>{{ .Configuration }}</pre>
	<a class="uk-button uk-button-danger" href="/settings/confreload">Reload</a>
</div>

{{ end }}

{{ define "scripts" }}
{{ end }}
